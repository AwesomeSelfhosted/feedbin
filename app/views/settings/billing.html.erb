<% content_for :head do %>
<%= javascript_include_tag "https://js.stripe.com/v2/" %>
<script>
    jQuery(function() {
        Stripe.applePay.checkAvailability(function(available) {
            feedbin.applePayInit(available)
        });
    });
</script>
<% end %>

<div class="settings-content-inner">
    <div class="settings-outer">
        <h2><%= (current_user.plan.trial?) ? "Subscribe" : "Billing" %></h2>
    </div>

    <% if ENV['STRIPE_API_KEY'] %>
        <% if @user.plan.trial? %>
            <%= render partial: 'shared/subscribe' %>
        <% else %>
            <%= render partial: 'shared/billing' %>
        <% end %>
    <% else %>
        <p>Billing disabled. <code>STRIPE_API_KEY</code> and <code>STRIPE_PUBLIC_KEY</code> are missing.</p>
    <% end %>
</div>
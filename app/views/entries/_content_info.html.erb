<% present entry do |entry_presenter| %>

  <% if content.present? %>
      <% if content_info.present? && !entry_presenter.feed_domain_matches?(content_info["host"]) %>
        <div class="original-content-info entry-callout">
          <%= entry_presenter.favicon_with_url(content_info["host"]) %>
          <% if content_info["title"].present? %>
            <div class="original-title"><a href="<%= content_info["url"] %>"><%= content_info["title"] %></a></div>
          <% end %>
          <div class="original-meta">
            <strong>Originally from:</strong>
              <%= content_info["host"] %>

              <% if content_info["date"].present? %>
                - <time datetime="<%= entry_presenter.parsed_date(content_info["date"], :datetime) %>"><%= entry_presenter.parsed_date(content_info["date"], :feed) %></time>
              <% end %>

              <% if content_info["author"].present? %>
                by <%= content_info["author"] %>
              <% end %>
            </div>
        </div>
      <% end %>
      <%= content.html_safe %>
  <% else %>
      <p class="content-error entry-callout">Readability was unable to get this articleâ€™s content.</p>
  <% end %>

<% end %>